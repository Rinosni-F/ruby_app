<!DOCTYPE html>
<html>
<head>
  <title>User List</title>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container">
    <h1 class="mt-5">User List</h1>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td>
              <a href="/users/<%= user.id %>" class="btn btn-info">View</a>
              <a href="/edit_user/<%= user.id %>" class="btn btn-primary">Edit</a>
              <form action="/delete_user/<%= user.id %>" method="post" style="display:inline;">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <a href="/add_user" class="btn btn-success">Add New User</a>
  </div>
</body>
</html>
